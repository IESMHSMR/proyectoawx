$TTL 600      ; 10 min
@       IN  SOA dns.juanpe.gonzalonazareno.org. admin@example.org. (
    {{ ansible_date_time.epoch }}   ; serial
    3600  ; refresh (1 hour)
    600   ; retry (10 min)
    86400 ; expire (1 day)
    600   ; minimum (1 hour)
    )
@       IN  NS  dns.juanpe.gonzalonazareno.org.
